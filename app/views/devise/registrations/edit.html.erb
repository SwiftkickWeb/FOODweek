<% content_for :page_header do %>
  <h1>Edit <%= resource_name.to_s.humanize %></h1>
<% end %>


<div class="devise-container container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, class: "clear-all-margins" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
      <em class="block">(leave blank if you don't want to change it)</em>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
<!-- A separate div class="form-group" use to begin here, in case anything goes wrong -->
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, class: "clear-all-margins" %> 
      <em class="block">(we need your current password to confirm your changes)</em>
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>

  <div class ="container-cancelmyaccount">
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-lg" %></p>
    </div>
</div>