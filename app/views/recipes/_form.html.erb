<section class="recipe-form">
  <%= form_for recipe do |f| %>

    <% if recipe.errors.any? %>
      <%= render partial: "shared/form_errors", locals: { object: recipe } %>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "Recipe Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :time, "Time to cook" %><br/>
      <small><em>in minutes</em></small>
      <%= f.number_field :time, min: 0, class: "form-control" %>
    </div>
   
    <div class="form-group">
      <%= f.label :ingredients, "Ingredients" %><br />
      <small><em>Note: one ingredient per line.</em></small>
      <%= f.text_area :ingredients, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :steps, "Steps" %><br />
      <small><em>Enter the steps to cook the recipe here.</em></small>
      <%= f.text_area :steps, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit submit_text, class: "btn btn-primary btn-lg test--recipe_submit" %>
    </div>

  <% end %>
</section>
