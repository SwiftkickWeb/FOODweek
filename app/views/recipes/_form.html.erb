<section class="recipe-form">
  <%= form_for recipe do |f| %>

    <% if recipe.errors.any? %>
      <aside class="form-errors">
        <ul class="form-errors__list">
          <% recipe.errors.full_messages.each do |error| %>
            <li class="form-errors__list-item"><%= error %></li>
          <% end %>
        </ul>
      </aside>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :time, "Time" %>
      <%= f.number_field :time, min: 0, class: "form-control" %>
    </div>
   
    <div class="form-group">
      <%= f.label :ingredients, "Ingredients" %>
      <%= f.text_area :ingredients, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :steps, "Steps" %>
      <%= f.text_area :steps, class: "form-control" %>
    </div>

    <%= f.submit submit_text, class: "btn btn-default" %>

  <% end %>
</section>
