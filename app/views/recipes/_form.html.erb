<section class="recipe-form">
  <%= form_for recipe do |f| %>

    <% if recipe.errors.any? %>
      <%= render partial: "shared/form_errors", locals: { object: recipe } %>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :time, "Time" %>
      <%= f.number_field :time, min: 0, class: "form-control" %>
    </div>
   
    <div class="form-group">
      <%= f.label :ingredients, "Ingredients" %>
      <%= f.text_area :ingredients, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :steps, "Steps" %>
      <%= f.text_area :steps, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit submit_text, class: "btn btn-primary btn-lg" %>
    </div>

  <% end %>
</section>
