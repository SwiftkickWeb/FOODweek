<%= form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= pluralize @recipe.errors.count, "error" %></h3>
      <ul>
        <% @recipe.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
 
  <div class="form-group">
    <%= f.label :ingredients, "Ingredients" %>
    <%= f.text_area :ingredients, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :steps, "Steps" %>
    <%= f.text_area :steps, class: "form-control" %>
  </div>

  <%= f.submit submit_text, class: "btn btn-default" %>
<% end %>
