<% @recipes.each do |recipe| %>
  <section>
    <h2><%= recipe.name %></h2>
    <ul>
      <li><%= link_to "Read", recipe %></li>
      <% if recipe.user = current_user %>
        <li><%= link_to "Edit", edit_recipe_path(recipe) %></li>
        <li><%= link_to "Delete", recipe, method: :delete %></li>
      <% end %>
    </ul>
  </section>
<% end %>
