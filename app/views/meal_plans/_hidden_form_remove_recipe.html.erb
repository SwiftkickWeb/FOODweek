<%= form_for meal_plan, url: remove_recipe_from_meal_plan_path(meal_plan) do |f| %>
  <% if meal_plan.errors.any? %>
    <%= render partial: "shared/form_errors", locals: { object: meal_plan } %>  
  <% end %>

  <input type="hidden" value="<%= recipe.id %>" name="recipe_id" id="recipe_id_<%= recipe.id %>">

  <%= f.submit t('recipes.remove_from_mealplan'), class: 'btn btn-warning btn-lg btn-recipe-form' %>
<% end %>
