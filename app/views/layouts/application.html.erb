<!doctype html>
<html class="no-js" lang="">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">

    <title><%= content_for?(:page_title).presence || 'FOODweek' %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

		<meta name="description" content="FOODweek. Your recipes. Your meal plan.">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<link rel="apple-touch-icon" href="apple-touch-icon.png">
	</head>

  <body class="<%= dash_it(controller_name) %> <%= dash_it(action_name) %>">
		<!--[if lt IE 8]>
		  <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
		<![endif]-->

    <%= render "layouts/nav" %>

    <header class="container-fluid page-header page-header__hero" role="banner">
      <div class="text-center page-header__content">
        <!-- If the particular view has some markup for :page_header -->
        <% if content_for?(:page_header) %>
          <%= yield :page_header %>

        <!-- Otherwise, show the hero banner -->
        <% else %>
          <h1 class="page-header__title">FOODweek</h1>
          <h2 class="page-header__subtitle">Your recipes. Your meal plan. Your FOODweek.</h2>
          <h3 class="page-header__motto">See what's good to eat.</h3>
        <% end %>
      </div>
    </header>

    <main class="container" role="main">
      <aside class="flash-messages">
        <% if notice %>
          <p class="bg-info flash-messages__notice"><%= notice %></p>
        <% end %>

        <% if alert %>
          <p class="bg-warning flash-messages__alert"><%= alert %></p>
        <% end %>
      </aside>

      <article class="<%= dash_it(controller_name) %>__article <%= dash_it(controller_name) %>__article--<%= dash_it(action_name) %>">
        <%= yield %>
      </article>
    </main>

    <footer class="container-fluid page-footer" role="contentinfo">
      <div class="footer-junk">
        <p><a href="http://www.rubyrampage.com"><img src="https://d4nnn7wspfa3h.cloudfront.net/rails-rumble-badge-2015-sm.png" alt="Ruby Rampage 2016 Participant" /></a></p>
      </div>
      <div class="footer-junk">
        <p>Designed and built with love by</p>
        <p><a href="http://www.twitter.com/johnhutch">@johnhutch</a></p>
        <p><a href="http://www.twitter.com/jon_athan_hall">@jon_athan_hall</a></p>
        <p><a href="http://www.twitter.com/arbitrarynoun">@arbitrarynoun</a></p>
        </p>
      </div>
    </footer>
  </body>

</html>
